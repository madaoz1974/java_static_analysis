{
  "name": "project-formatting",
  "version": "1.0.0",
  "description": "Java formatting setup with prettier-java and tab indentation",
  "devDependencies": {
    "prettier": "^3.0.0",
    "prettier-plugin-java": "^2.5.0"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.java\"",
    "format:check": "prettier --check \"src/**/*.java\"",
    "format:tabs": "prettier --use-tabs --tab-width 4 --write \"src/**/*.java\""
  }
}
